                  "key": "search",
                  "value": "",
                  "description": "Search by order ID, user email, or user name",
                  "disabled": true
                },
                {
                  "key": "paymentMethod",
                  "value": "",
                  "description": "Filter by payment method (COD, etc.)",
                  "disabled": true
                },
                {
                  "key": "paymentStatus",
                  "value": "",
                  "description": "Filter by payment status (pending, completed, etc.)",
                  "disabled": true
                },
                {
                  "key": "deliveryStatus",
                  "value": "",
                  "description": "Filter by delivery status",
                  "disabled": true
                }
              ]
